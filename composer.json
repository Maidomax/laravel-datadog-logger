{
    "name": "maidomax/laravel-datadog-logger",
    "description": "A Laravel package for logging to Datadog via HTTP API",
    "type": "library",
    "keywords": [
        "laravel",
        "datadog",
        "logging",
        "monolog",
        "observability"
    ],
    "homepage": "https://github.com/Maidomax/laravel-datadog-logger",
    "license": "MIT",
    "authors": [
        {
            "name": "Maidomax",
            "email": "maidomax@yahoo.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0|^10.0|^11.0|^12.0",
        "monolog/monolog": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Maidomax\\DatadogLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maidomax\\DatadogLogger\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maidomax\\DatadogLogger\\DatadogLoggerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix",
        "format-check": "vendor/bin/php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
